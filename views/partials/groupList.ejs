<div class="row" style="margin-top: 15px;">
        <% _.each(groups, function(group) { %>

            <div class="col-lg-4">
                <div class="contact-box">
                    <a href="/group/edit/<%= group.id %>">
                    
                    <div class="col-sm-8">
                        <h3><strong><%= group.name %></strong></h3>
                        <address>
                            <%= group.address %> <br>
                        </address>
                    </div>
                    <div class="clearfix"></div>
                        </a>
                </div>
            </div>

        <% }) %>
    </div>