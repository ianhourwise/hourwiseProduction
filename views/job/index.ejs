<h1> List of Jobs </h1>

<div>

	<table class = "table table-hover">
		<tr>
			<th>Name</th>
			<th>Owner</th>
			<th>Recipient</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>

		<% _.each(jobs, function(job) { if(!job.client){job.client = {name: 'No Client', id: '#'}}%>
			<tr data-id = "<% job.id %>" data-model = "job">
				<td><%= job.name %></td>
				<td><%= job.owner.username %></td>
				<td><a href="/contact/edit/<%= job.client.id %>"> <%= job.client.name %> </a></td>
				<td><a href= "/job/show/<%= job.id %>" class= "btn btn-sm btn-primary" >Show</a> </td>
				<td><a href= "/job/edit/<%= job.id %>" class= "btn btn-sm btn-warning" >Edit</a> </td>
			</tr>

		<% }) %>
	</table>

</div>
