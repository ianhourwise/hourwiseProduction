<div class= "container" style="width: 80%;">

    <form action = "/task/create/" method = "GET" class= "form-signin">
        <h2 class= "form-signin-heading">Add Task...</h2>

            <input type= "text" class = "form-control" placeholder = "Name" name="name">
            <hr>
            <input type= "text" class = "form-control" placeholder = "Description" name="description">
            <hr>
            <input type="date" class = "form-control" placeholder = "Start Date" name="startDate">
            <hr>
            <input type="date" class = "form-control" placeholder = "End Date" name="endDate">
            <hr>
            <select name="owner">
                <option value="null">Select a user to add assign this task: </option>
              <% _.each(users, function(user) { %>
                    <option value="<%= user.id %>"><%= user.username %></option>
              <%  }) %>
            </select>
            <hr>
            <select name="urgent">
                <option value="false" selected>Not Urgent</option>
                <option value="<%= user.id %>">Urgent</option>
            </select>
            <hr>
            <input type="hidden" class="form-control" value="<%= user.id %>" name="requester">
            <input type = "submit" class = "btn btn-lg btn-primary btn-block" value = "Create Task" />
            <input type= "hidden"  name = "_csrf" value = "<%= _csrf %>"/>

    </form>

</div>