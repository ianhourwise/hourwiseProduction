<h3>Total tickets this month: <%- lastTickets.length %> </h3>
<div class="row">
    <div class="col-lg-3">
        <h3>Organization - <div class="orgFilters">All</div></h3>
    </div>
    <div class="col-lg-3">
        <h3>Task Type- <div class="taskFilters">All</div></h3>
    </div>
    <div class="col-lg-3">
        <h3>Requester - <div class="requesterFilters">
        <select class="chosen requesterList">
                <option value="all" selected="selected" class="requester">All</option>
                <% for (var i = 0; i < companies.length; i++) { %>
                    <% for (var j = 0; j < companies[i].employees.length; j++) { %>
                        <% if (companies[i].employees[j].zendeskId != null) { %>
                            <option value="<%= companies[i].employees[j].zendeskId %>" class="requester"><%= companies[i].employees[j].username %></option>
                        <% } else {} %>
                    <% } %>
                <% } %>
            </select></div></h3>
    </div>
    <div class="col-lg-3">
        <h3>Assignee - <div class="assigneeFilters">
        <select class="chosen assigneeList">
                <option value="all" selected="selected" class="assignee">All</option>
                <% for (var i = 0; i < companies.length; i++) { %>
                    <% for (var j = 0; j < companies[i].employees.length; j++) { %>
                        <% if (companies[i].name == 'Hourwise') { %>
                            <option value="<%= companies[i].employees[j].zendeskId %>" class="assignee"><%= companies[i].employees[j].username %></option>
                        <% } else {} %>
                    <% } %>
                <% } %>
            </select></div></h3>
    </div>
</div>
