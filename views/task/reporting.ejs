<h3>Total tickets this month: <%- tickets.length %> </h3>

<div class="row m-t-sm">
    <div class="col-lg-12">
    <div class="panel blank-panel">
    <div class="panel-heading">
        <div class="panel-options">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab-1" data-toggle="tab">List</a></li>
                <li class=""><a href="#tab-2" data-toggle="tab">Task</a></li>
                <li class=""><a href="#tab-3" data-toggle="tab">Organization</a></li>
            </ul>
        </div>
    </div>

    <div class="panel-body">

        <div class="tab-content">
            <div class="tab-pane active" id="tab-1">
                <!-- RECIPIENT COMMUNICATIONS GO HERE -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="wrapper wrapper-content animated fadeInUp">
                            <table class="table">
                                <th>Subject</th>
                                <th>HWCS - Minutes</th>
                                <th>Requester</th>
                                <th>Request Date</th>
                                <th>Ticket Type</th>
                                <th>Link</th>
                                <tbody id="ticketList">
                                <% _.each(tickets, function(ticket) { %>
                                    <tr>
                                        <td><%= ticket.zendesk.subject %></td>
                                        <td><%= ticket.zendesk.fields[3].value %></td>
                                        <td><%= ticket.zendesk.requester_id %></td>
                                        <td><%= ticket.zendesk.created_at %></td>
                                        <td><%= ticket.zendesk.via.channel %></td>
                                        <td><a href="<%= ticket.zendesk.url %>">Go to ticket</a></td>
                                    </tr>
                                </tbody>
                                <% }) %>
                             </table>
                        </div>
                    </div>
                </div>

            </div>
            <div class="tab-pane" id="tab-2">

                <div class="row">
                    <div class="col-lg-12">
                        <div id="taskGraph" style="width:100%;height:300px;margin-bottom: 50px;"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-1" id="singleCompany" class="false">
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-success m-r-sm taskButton remove" name="client_management">Client</button>
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-success m-r-sm taskButton remove" name="fupc">FUPC</button>
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-success m-r-sm taskButton remove" name="ipc"> IPC </button>
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-success m-r-sm taskButton remove" name="invoice">Invoice</button>
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-success m-r-sm taskButton remove" name="junk_spam">Junk</button>
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-success m-r-sm taskButton remove" name="other">Other</button>
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-success m-r-sm taskButton remove" name="quote">Quote</button>
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-success m-r-sm taskButton remove" name="cpc">CPC</button>
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-success m-r-sm taskButton remove" name="hourwise">HW</button>
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-success m-r-sm taskButton remove" name="unmatched">Unmatched</button>
                    </div>
                    <div class="col-md-1">
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="wrapper wrapper-content animated fadeInUp">
                            <table class="table">
                                <th>Organization</th>
                                <th>Count</th>
                                <th>Sum of Minutes</th>
                                <th>Min. Minute Val</th>
                                <th>Max. Minute Val</th>
                                <th>Median</th>
                                <th>Mean</th>
                                <th id="clearTasks"><button type="button" class="btn btn-danger m-r-sm">RESET</button></th>
                                <tbody id="taskTable">

                                </tbody>
                             </table>
                        </div>
                    </div>
                </div>

            </div>
            <div class="tab-pane" id="tab-3">

                <div class="row">
                    <div class="col-lg-12">
                        <div id="companyGraph" style="width:100%;height:300px;margin-bottom: 50px;"></div>
                    </div>
                </div>

	            <div class="row">
                    <div class="col-lg-12">
                        <div class="wrapper wrapper-content animated fadeInUp">
                            <table class="table">
                                <th>Organization</th>
                                <th>Count</th>
                                <th>Sum of Minutes</th>
                                <th>Min. Minute Val</th>
                                <th>Max. Minute Val</th>
                                <th>Median</th>
                                <th>Mean</th>
                                <th id="clearOrg"><button type="button" class="btn btn-danger m-r-sm">RESET</button></th>
                                    <tbody id="orgTable">

                                    </tbody>
                             </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
    </div>
</div>
</div>

<script>
    var tickets = <%- JSON.stringify(tickets) %>;
    var companies = <%- JSON.stringify(companies) %>;
</script>