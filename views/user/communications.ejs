<div class="container" style="width: 100%;">
	<div class="panel blank-panel">

	    <div class="panel-heading">
	        <div class="panel-title m-b-md"><h4>Communications</h4></div>
	        <div class="panel-options">

	            <ul class="nav nav-tabs">
	                <li class=""><a data-toggle="tab" href="#tab-1" aria-expanded="false">Phone/SMS</a></li>
	                <li class="active"><a data-toggle="tab" href="#tab-2" aria-expanded="true">Email</a></li>
	            </ul>
	        </div>
	    </div>

	    <div class="panel-body">

	        <div class="tab-content">
	            <div id="tab-1" class="tab-pane">
	                <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>SMS History</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>

                    <div class="ibox-content inspinia-timeline">
                        <% _.each(touches, function(touch){ %>
                            <div class="timeline-item">
                                <div class="row">
                                    <div class="col-xs-3 date">
                                        <% if (touch.inbound == null) { %>
                                            <i class="fa fa-arrow-up"></i>
                                            <%= touch.outbound %>
                                        <% } else { %>
                                            <i class="fa fa-arrow-down"></i>
                                            <%= touch.inbound %>
                                        <% } %>
                                        <br>
                                        <% if (touch.createdBy != null) { %>
                                            <small class="text-navy">Created by:<br> <%= touch.createdBy.username %></small>
                                        <% } else if (touch.contact != null) { %>
                                            <small class="text-navy">Sent from:<br> <%= touch.contact.name %></small>
                                        <% } else { %>
                                            <small class="text-navy">Sent from:<br> Unknown</small>
                                        <% } %>
                                    </div>
                                    <div class="col-xs-7 content no-top-border">
                                        <p class="m-b-xs"><strong>Message</strong></p>

                                        <% if (touch.mediaUrl != null) { %>
                                            <img src="<%= touch.mediaUrl %>"></img>
                                        <% } else {} %>
                                        <p><%= touch.body %></p>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                    <a data-toggle="modal" class="btn btn-primary fa fa-paper-plane" href="#modal-form">Send SMS</a>
                    <div id="modal-form" class="modal fade in" aria-hidden="false" style="display: none;">
                                        <div class="modal-backdrop fade in"></div>
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                                    </div>                                        
                                                <div class="modal-body">
                                                    <div class="row">
                                                      <div class="col-sm-12 b-r"><h3 class="m-t-none m-b">Send an SMS</h3>
                                                            <form action= "/touch/outboundSMS" role="form" method = "POST" id="textFrom">
                                                                <div class="form-group"><label>Number</label> 
                                                                    <input type="text" name = "toNumber" placeholder="Number" class="form-control"></div>
                                                                <div class="form-group"><label>Body</label> 
                                                                    <textarea name="body" id="email-text" class="form-control tinymce" rows="12" form="textFrom" placeholder="Add text..."></textarea></div>
            
                                                                                                                              
                                                                    <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit">
                                                                        <strong>Send</strong>
                                                                    </button>
                                                                
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>    
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                                                </div>    
                                            </div>
                                        </div>
                                    </div>
                </div>
            </div>
	            </div>

	            <div id="tab-2" class="tab-pane active">
	                <div id="email-content">
                        <!-- Start #email-content -->
                        <div class="email-wrapper">
                            <!-- Start .email-wrapper -->
                            <div class="email-write">
                                <!-- Start .email-write -->
                                <form action="/touch/sendEmail" id="emailForm" role="form" class="form-horizontal">
                                    <div class="form-group">
                                        <div class="col-lg-12">
                                            <input type="text" class="form-control" id="to" name="toEmail" placeholder="To">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-12">
                                        	<select name='fromEmail'>
									        	<% _.each(users, function(u) { %>
									        		<option value="<%= u.email %>"><%= u.email %></option>
									        	<%	}) %>	   	
								            </select>
                                            <!-- <input type="text" class="form-control" id="from" name="fromEmail" placeholder="<%= user.email %>"> -->
                                        </div>
                                    </div>
                                    <!-- End .form-group  -->
                                    <div class="form-group">
                                        <div class="col-lg-12">
                                            <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject">
                                        </div>
                                    </div>
                                    <!-- End .form-group  -->
                                    <div class="form-group">
                                        <div class="col-lg-12">
                                            <textarea name="body" id="email-text" class="form-control tinymce" rows="21" form="emailForm"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-12">
                                            <input type="hidden" class="form-control" id="to" name="toName" value="test">
                                        </div>
                                    </div>
                                    <!-- End .form-group  -->
                                    <div class="form-group">
                                        <div class="col-lg-12">
                                            <div class="pull-left">
                                                <input type="submit" class="btn btn-lrg btn-primary btn-block" value="Send">
                                            </div>
                                            <!-- <div class="pull-right">
                                                <div class="btn-group dropup">
                                                    <a href="#" class="mr10 tip color-dark" title="Discard draft"><i class="im-remove s20"></i></a>
                                                    <a href="#" class="tip color-dark" title="More options" data-toggle="dropdown"><i class="im-cog2 s20"></i></a>
                                                    <ul class="dropdown-menu right">
                                                        <li><a href="#">Canned response</a>
                                                        </li>
                                                        <li><a href="#">Archive message</a>
                                                        </li>
                                                        <li><a href="#">Save as draft</a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div> -->
                                    </div>
                                    <!-- End .form-group  -->
                                </form>
                            </div>
                            <!-- End .email-write -->
                        </div>
                        <!-- End .email-wrapper -->
                    </div>

	            </div>
	        </div>

	    </div>

	</div>
</div>